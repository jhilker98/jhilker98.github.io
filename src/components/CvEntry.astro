---
interface Props {
  title: string;
  startDate: string;
  endDate?: string;
  employer: string;
  location: string;
}

const {
  title,
  startDate,
  endDate = "Present",
  employer,
  location,
} = Astro.props;
---

<details class="group mr-8 max-w-full container">
  <summary
    class="list-none after:content-['â–¸'] after:transform group-open:after:rotate-90 after:transition-all duration-100 after:inline-block lg:flex after:ml-1">
    <span class="font-serif text-xl">{title}</span>
    <span class="hidden lg:inline lg:ml-auto"
      >{new Date(startDate).getFullYear()} &mdash; {
        endDate != "Present" ? new Date(endDate).getFullYear() : endDate
      }</span
    >
  </summary>
  <div class="prose">
    <span class="block mt-1">
      {employer} &mdash; {location}
    </span>
    <slot />
  </div>
</details>
