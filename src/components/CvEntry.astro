---
interface Props {
  title: string;
  startDate: string;
  endDate?: string;
  employer: string;
  location: string;
}

const {
  title,
  startDate,
  endDate = "Present",
  employer,
  location,
} = Astro.props;
---

<div
  class="my-2.5 last:border-0 border-b-2 border-gray-300 dark:border-gray-700 pb-2">
  <details
    class="group mr-12 max-w-full container pl-5 border-l-2 border-gray-300 dark:border-gray-700">
    <summary
      class="list-none after:content-['â–¸'] after:transform group-open:after:rotate-90 after:transition-all duration-100 after:inline-block lg:flex lg:after:ml-1 dark:after:text-neutral-400 transition-[margin] group-open:mb-2 mb-0">
      <span
        class="font-serif text-xl text-branding-black dark:text-branding-white"
        >{title}</span
      >
      <span
        class="hidden lg:inline lg:ml-auto dark:text-neutral-300 text-neutral-600"
        >{new Date(startDate).getFullYear()} &mdash; {
          endDate != "Present" ? new Date(endDate).getFullYear() : endDate
        }</span
      >
    </summary>
    <p class="block lg:hidden dark:text-neutral-300 text-neutral-600">
      {new Date(startDate).getFullYear()} &mdash; {
        endDate != "Present" ? new Date(endDate).getFullYear() : endDate
      }
    </p>
    <span class="block my-1 dark:text-neutral-400">
      {employer} &mdash; {location}
    </span>

    <div class="prose prose-neutral dark:prose-invert prose-blue">
      <slot />
    </div>
  </details>
</div>
