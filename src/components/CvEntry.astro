---
interface Props {
  title: string;
  startDate: string;
  endDate?: string;
  employer: string;
  location: string;
}

const {
  title,
  startDate,
  endDate = "Present",
  employer,
  location,
} = Astro.props;
---

<details class="group mr-12 max-w-full container [&>div">
  <summary
    class="list-none after:content-['â–¸'] after:transform group-open:after:rotate-90 after:transition-all duration-100 after:inline-block lg:flex lg:after:ml-1">
    <span class="font-serif text-xl text-branding-black">{title}</span>
    <span class="hidden lg:inline lg:ml-auto"
      >{new Date(startDate).getFullYear()} &mdash; {
        endDate != "Present" ? new Date(endDate).getFullYear() : endDate
      }</span
    >
  </summary>
  <p class="block lg:hidden">
    {new Date(startDate).getFullYear()} &mdash; {
      endDate != "Present" ? new Date(endDate).getFullYear() : endDate
    }
  </p>
  <span class="block mt-1">
    {employer} &mdash; {location}
  </span>

  <div class="prose">
    <slot />
  </div>
</details>
