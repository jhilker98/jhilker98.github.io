---
/*
things to add:
 - theme: primary/secondary/disabled 
 - type: "button" | "submit" | "link"
 */
import type { HTMLAttributes } from "astro/types";
interface Props extends HTMLAttributes<"button"> {
  theme?: "primary" | "secondary";
  size?: "small" | "medium" | "large";
  textCase?: "upper" | "lower";
}

const {
  type = "button",
  theme = "primary",
  size = "medium",
  ...rest
} = Astro.props;
---

<button
  {type}
  class:list={[
    "cursor-pointer",
    "transition",
    "duration-200",
    "motion-reduce:duration-0",
    "font-bold",
    "disabled:cursor-not-allowed",
    "focus:outline-offset-3",
    "focus:outline",
    "ease-out",
    "text-white",
    "uppercase",
    {
      "bg-branding-navy hover:bg-branding-navy-800 dark:hover:bg-branding-navy-400 disabled:text-branding-navy-200 focus:outline-branding-navy focus:dark:hover:outline-branding-navy-500":
        theme === "primary",
    },
    {
      "bg-branding-brown hover:bg-branding-brown-600 disabled:text-branding-brown-50/95 focus:outline-branding-brown":
        theme === "secondary",
    },
    { "text-sm py-1 px-2 rounded-sm": size === "small" },
    { "text-base py-2 px-4 rounded": size === "medium" },
    { "text-lg py-3 px-6 rounded-lg": size === "large" },
  ]}
  {...rest}>
  <slot />
</button>
