---
/* eslint astro/prefer-class-list-directive: "error" */

import FixedSidebar from "@components/FixedSidebar.astro";
import Header from "@components/Header.astro";
import { SITE_META } from "@consts";
import { SEO } from "astro-seo";
import "@fontsource/ibm-plex-sans";
import "@fontsource/ibm-plex-serif";
import "@fontsource/iosevka";

interface Props {
  title: string;
  description: string;
}
const { title, description } = Astro.props;
---

<html lang="en">
  <head>
    <SEO
      title={title}
      titleFormat=`%s - ${SITE_META.title}`
      charset="utf-8"
      description={description}
      extend={{
        meta: [
          { name: "generator", content: Astro.generator },
          {
            name: "viewport",
            content: "width=device-width, initial-scale=1.0",
          },
        ],
      }}
    />
  </head>
  <body class="min-h-screen bg-branding-white">
    <div
      class="h-screen grid grid-cols-layout grid-rows-layout grid-areas-mobile lg:grid-areas-desktop"
      data-role="site-container">
      <Header />
      <FixedSidebar />
      <main class="grid-in-main overflow-y-scroll scrollbar-thin">
        <slot />
      </main>
    </div>
  </body>
</html>
