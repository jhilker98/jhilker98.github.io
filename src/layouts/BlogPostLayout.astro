---
import BaseLayout from "@layouts/BaseLayout.astro";
import PostHeader from "@components/blog/PostHeader.astro";
const { frontmatter } = Astro.props;
const { title, pubDate, lastModDate = pubDate } = frontmatter;
---

<BaseLayout title={title}>
  <article
    class="p-2 prose mx-auto max-w-[80ch] prose-headings:font-serif prose-site">
    <PostHeader title={title} pubDate={pubDate} lastModDate={lastModDate} />
    <slot />
  </article>
</BaseLayout>
